<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <h3>{{#if editing}}Editar Empleado{{else}}Crear Nuevo Empleado{{/if}}</h3>
            </div>
            <div class="card-body">
                <form action="{{#if editing}}/admin/empleados/edit/{{empleado.id_usuario}}{{else}}/admin/empleados/add{{/if}}" method="POST">
                    
                    {{#if error}}
                    <div class="alert alert-danger">{{error}}</div>
                    {{/if}}

                    <h5 class="mb-3">Datos Personales</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3"><label class="form-label">Nombre</label><input type="text" name="nombre" class="form-control" value="{{empleado.nombre}}" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label">Apellido</label><input type="text" name="apellido" class="form-control" value="{{empleado.apellido}}"></div>
                    </div>
                    <div class="mb-3"><label class="form-label">N° de Carnet/ID</label><input type="text" name="carnet_identidad" class="form-control" value="{{empleado.carnet_identidad}}"></div>
                    <hr>
                    <h5 class="mb-3">Datos de Contacto y Cuenta</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3"><label class="form-label">Correo Electrónico</label><input type="email" name="correo" class="form-control" value="{{empleado.correo}}" required></div>
                        <div class="col-md-6 mb-3"><label class="form-label">Teléfono</label><input type="tel" name="telefono" class="form-control" value="{{empleado.telefono}}"></div>
                    </div>
                    <div class="mb-3"><label class="form-label">Dirección</label><textarea name="direccion" class="form-control">{{empleado.direccion}}</textarea></div>
                    <hr>
                    <h5 class="mb-3">Rol y Contraseña</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Rol en la Empresa</label>
                            <select name="id_rol" class="form-select" required>
                                {{#each roles}}
                                <option value="{{this.id_rol}}" {{#if (eq this.id_rol ../empleado.id_rol)}}selected{{/if}}>{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{#unless editing}}
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        {{/unless}}
                    </div>
                    {{#if editing}}
                    <div class="form-check form-switch mb-3">
                      <input class="form-check-input" type="checkbox" role="switch" name="activo" id="flexSwitchCheckChecked" {{#if empleado.activo}}checked{{/if}}>
                      <label class="form-check-label" for="flexSwitchCheckChecked">Empleado Activo</label>
                    </div>
                    {{/if}}

                    <div class="d-flex justify-content-end mt-4">
                        <a href="/admin/empleados" class="btn btn-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">{{#if editing}}Actualizar Empleado{{else}}Crear Empleado{{/if}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>