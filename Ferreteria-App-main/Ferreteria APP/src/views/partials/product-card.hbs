<div class="card h-100 product-card">
    <a href="/producto/{{this.id_producto}}" class="text-decoration-none">
        <div class="card-img-container"><img src="{{this.imagen}}" class="card-img-top" alt="{{this.nombre}}" style="height: 180px; object-fit: contain;"></div>
    </a>
    <div class="card-body">
        <h3 class="card-title h6"><a href="/producto/{{this.id_producto}}" class="text-decoration-none">{{this.nombre}}</a></h3>
        <p class="card-text">{{this.categoria_nombre}}</p>
        <div class="d-flex justify-content-between align-items-center mt-auto pt-2">
            <div>
                {{#if this.es_oferta}}
                    <span class="fs-5 fw-bold" style="color: var(--color-primary);">${{this.precio_oferta}}</span>
                    <del class="small ms-2">${{this.precio_venta}}</del>
                {{else}}
                    <span class="card-price">${{this.precio_venta}}</span>
                {{/if}}
            </div>
            <div class="action-buttons">
                <!-- BOTÓN "VER DETALLES" (NUEVO ÍCONO) -->
                <a href="/producto/{{this.id_producto}}" class="btn buy-now-btn" title="Ver detalles">
                    <i class="bi bi-box-arrow-in-right"></i>
                </a>
                <!-- BOTÓN "AÑADIR AL CARRITO" (NUEVO ÍCONO) -->
                <button class="btn add-to-cart-btn" data-id="{{this.id_producto}}" title="Añadir al carrito">
                    <i class="bi bi-cart-plus-fill"></i>
                </button>
            </div>
        </div>
    </div>
</div>