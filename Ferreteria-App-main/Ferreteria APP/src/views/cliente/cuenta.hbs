<!-- Encabezado de la Sección con Botón de Volver -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Mi Cuenta</h1>
    <a href="/" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la tienda
    </a>
</div>

<div class="row">
    <!-- Menú Lateral -->
    <div class="col-lg-3">
        <div class="card shadow-sm mb-4">
            <div class="list-group list-group-flush">
                <a href="/mi-cuenta" class="list-group-item list-group-item-action {{#if isProfile}}active{{/if}}">
                    <i class="bi bi-person-fill me-2"></i>Mi Perfil
                </a>
                <a href="/mis-compras" class="list-group-item list-group-item-action {{#if isShoppingHistory}}active{{/if}}">
                    <i class="bi bi-receipt me-2"></i>Mis Compras
                </a>
                <a href="#" class="list-group-item list-group-item-action disabled">
                    <i class="bi bi-credit-card-fill me-2"></i>Datos Bancarios
                </a>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="col-lg-9">
        <div class="card shadow-sm">
            <div class="card-body p-4">

                <!-- Pestaña: Mi Perfil -->
                {{#if isProfile}}
                    <h3 class="card-title mb-4">Información de mi Cuenta</h3>
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <img src="{{cliente.foto_perfil}}" class="img-fluid rounded-circle mb-3" alt="Foto de {{cliente.nombre}}" style="max-width: 150px;">
                            <button class="btn btn-secondary btn-sm">Cambiar Foto</button>
                        </div>
                        <div class="col-md-8">
                           <form>
                                <div class="mb-3">
                                    <label class="form-label">Nombre</label>
                                    <input type="text" class="form-control" value="{{cliente.nombre}}" readonly>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Correo</label>
                                    <input type="email" class="form-control" value="{{cliente.correo}}" readonly>
                                </div>
                                <!-- Más campos aquí (teléfono, dirección, etc.) -->
                                <button type="button" class="btn btn-primary">Editar Información</button>
                           </form>
                        </div>
                    </div>
                {{/if}}

                <!-- Pestaña: Mis Compras -->
                {{#if isShoppingHistory}}
                    <h3 class="card-title mb-4">Historial de Compras</h3>
                    {{#each compras}}
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between flex-wrap">
                            <span class="me-3"><strong>Pedido #{{this.id_venta}}</strong></span>
                            <span>Fecha: {{this.fecha}}</span>
                        </div>
                        <div class="card-body d-flex justify-content-between align-items-center">
                           <span><strong>Total: ${{this.total}}</strong></span>
                           <a href="/mis-compras/{{this.id_venta}}" class="btn btn-sm btn-outline-primary">Ver Detalles</a>
                        </div>
                    </div>
                    {{else}}
                    <div class="alert alert-info">
                        Aún no has realizado ninguna compra. ¡Explora nuestra <a href="/">tienda</a> para empezar!
                    </div>
                    {{/each}}
                {{/if}}

            </div>
        </div>
    </div>
</div>