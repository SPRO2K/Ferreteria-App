<div class="row">
    <div class="col-md-4">
        <div class="card">
            <img src="{{cliente.foto_perfil}}" class="card-img-top" alt="Foto de perfil de {{cliente.nombre}}">
            <div class="card-body text-center">
                <h5 class="card-title">{{cliente.nombre}} {{cliente.apellido}}</h5>
                <p class="card-text text-muted">Cliente</p>
                <button class="btn btn-secondary btn-sm">Cambiar foto</button>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3>Información de mi Cuenta</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" value="{{cliente.nombre}}" readonly>
                    </div>
                     <div class="mb-3">
                        <label class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" value="{{cliente.correo}}" readonly>
                    </div>
                     <div class="mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" value="{{cliente.telefono}}" readonly>
                    </div>
                     <div class="mb-3">
                        <label class="form-label">Dirección</label>
                        <textarea class="form-control" rows="3" readonly>{{cliente.direccion}}</textarea>
                    </div>
                    <button type="button" class="btn btn-primary">Editar Información</button>
                </form>
            </div>
        </div>
    </div>
</div>