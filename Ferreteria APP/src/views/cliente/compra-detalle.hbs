<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Detalle de Compra #{{venta.id_venta}}</h3>
                <a href="/mis-compras" class="btn btn-sm btn-secondary"><i class="bi bi-arrow-left"></i> Volver al Historial</a>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-sm-6">
                        <strong>Fecha del Pedido:</strong> {{venta.fecha}}<br>
                        <strong>Sucursal de Compra:</strong> {{venta.sucursal_nombre}}
                    </div>
                    <div class="col-sm-6 text-sm-end">
                        <strong>MÃ©todo de Pago:</strong> {{venta.metodo_pago}}
                    </div>
                </div>

                <h5 class="mb-3">Productos Comprados</h5>
                <ul class="list-group list-group-flush">
                    {{#each detalles}}
                    <li class="list-group-item d-flex align-items-center">
                        <img src="{{this.imagen}}" alt="{{this.producto_nombre}}" class="me-3" style="width: 60px; height: 60px; object-fit: contain;">
                        <div class="flex-grow-1">
                            <strong>{{this.producto_nombre}}</strong>
                            <p class="mb-0 text-muted small">Cantidad: {{this.cantidad}} x ${{this.precio_unitario}}</p>
                        </div>
                        <span class="fw-bold">${{multiply this.cantidad this.precio_unitario}}</span>
                    </li>
                    {{/each}}
                </ul>
                <hr>
                <div class="d-flex justify-content-end">
                    <div class="text-end">
                        <p class="mb-1">Total: <strong class="fs-4">${{venta.total}}</strong></p>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button class="btn btn-primary" onclick="window.print();"><i class="bi bi-printer-fill me-2"></i> Imprimir Recibo</button>
                </div>
            </div>
        </div>
    </div>
</div>