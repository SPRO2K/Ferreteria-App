<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Gestión de Productos</h3>
        <a href="/productos/add" class="btn btn-primary">Añadir Producto</a>
    </div>
    <div class="card-body">
        {{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead><tr><th>ID</th><th>Nombre</th><th>Activo</th><th>Acciones</th></tr></thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td>{{this.id_producto}}</td>
                        <td>{{this.nombre}}</td>
                        <td>{{#if this.activo}}<span class="badge bg-success">Sí</span>{{else}}<span class="badge bg-danger">No</span>{{/if}}</td>
                        <td>
                            <a href="/productos/edit/{{this.id_producto}}" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/productos/delete/{{this.id_producto}}" class="btn btn-sm btn-danger ms-2" onclick="return confirm('¿ELIMINAR PERMANENTEMENTE?');">Eliminar</a>
                        </td>
                    </tr>
                    {{else}}
                    <tr><td colspan="4" class="text-center p-4">No hay productos.</td></tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>