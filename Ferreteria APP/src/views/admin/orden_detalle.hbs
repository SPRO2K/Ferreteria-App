<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card admin-card form-view-container">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Detalle de Orden de Compra #{{orden.id_orden}}</h3>
                <a href="/admin/ordenes-compra" class="btn btn-sm btn-secondary"><i class="bi bi-arrow-left"></i> Volver a la Lista</a>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Proveedor:</strong> {{orden.proveedor_nombre}}<br>
                        <strong>Creada por:</strong> {{orden.creador_nombre}}<br>
                        <strong>Fecha de Creación:</strong> {{orden.fecha_creacion}}
                    </div>
                    <div class="col-md-6 text-md-end">
                        <strong>Estado:</strong> 
                        {{#if (eq orden.estado 'Pendiente')}}<span class="badge bg-warning text-dark">Pendiente</span>{{/if}}
                        {{#if (eq orden.estado 'Enviada')}}<span class="badge bg-info text-dark">Enviada</span>{{/if}}
                        {{#if (eq orden.estado 'Recibida')}}<span class="badge bg-success">Recibida</span>{{/if}}
                        {{#if (eq orden.estado 'Cancelada')}}<span class="badge bg-danger">Cancelada</span>{{/if}}
                        <br>
                        {{#if orden.fecha_recepcion}}
                            <strong>Fecha de Recepción:</strong> {{orden.fecha_recepcion}}
                        {{/if}}
                    </div>
                </div>
                <h5 class="mb-3">Productos Solicitados</h5>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad Solicitada</th>
                                <th class="text-end">Precio Compra Unitario</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each detalles}}
                            <tr>
                                <td>{{this.producto_nombre}}</td>
                                <td class="text-center">{{this.cantidad_solicitada}}</td>
                                <td class="text-end">${{this.precio_compra_unitario}}</td>
                                <td class="text-end">${{multiply this.cantidad_solicitada this.precio_compra_unitario}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <tfoot class="fw-bold">
                            <tr>
                                <td colspan="3" class="text-end">Total Estimado de la Orden</td>
                                <td class="text-end fs-5" style="color: var(--color-primary);">${{orden.total_estimado}}</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>