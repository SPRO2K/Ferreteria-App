<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h3>{{#if editing}}Editar Producto{{else}}Añadir Nuevo Producto{{/if}}</h3>
            </div>
            <div class="card-body p-4">
                <form action="{{#if editing}}/productos/edit/{{producto.id_producto}}{{else}}/productos/add{{/if}}" method="POST">
                    
                    {{#if error}}
                    <div class="alert alert-danger" role="alert">
                        {{error}}
                    </div>
                    {{/if}}

                    <h5>Datos Básicos</h5>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="nombre" class="form-label">Nombre del Producto</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="{{producto.nombre}}" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="codigo_barras" class="form-label">Código de Barras</label>
                            <input type="text" class="form-control" id="codigo_barras" name="codigo_barras" value="{{producto.codigo_barras}}">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripción</label>
                        <textarea class="form-control" id="descripcion" name="descripcion" rows="3">{{producto.descripcion}}</textarea>
                    </div>
                    <div class="mb-3">
                        <label for="imagen" class="form-label">URL de la Imagen</label>
                        <input type="text" class="form-control" id="imagen" name="imagen" value="{{producto.imagen}}">
                    </div>

                    <h5 class="mt-4">Precios y Categorización</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="precio_compra" class="form-label">Precio Compra ($)</label>
                            <input type="number" step="0.01" class="form-control" id="precio_compra" name="precio_compra" value="{{producto.precio_compra}}" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="precio_venta" class="form-label">Precio Venta ($)</label>
                            <input type="number" step="0.01" class="form-control" id="precio_venta" name="precio_venta" value="{{producto.precio_venta}}" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="id_categoria" class="form-label">Categoría</label>
                            <select class="form-select" id="id_categoria" name="id_categoria" required>
                                <option value="">Seleccionar...</option>
                                {{#each categorias}}
                                <option value="{{this.id_categoria}}" {{#if (eq this.id_categoria ../producto.id_categoria)}}selected{{/if}}>{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="id_marca" class="form-label">Marca</label>
                            <select class="form-select" id="id_marca" name="id_marca" required>
                                <option value="">Seleccionar...</option>
                                {{#each marcas}}
                                <option value="{{this.id_marca}}" {{#if (eq this.id_marca ../producto.id_marca)}}selected{{/if}}>{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="id_unidad" class="form-label">Unidad</label>
                            <select class="form-select" id="id_unidad" name="id_unidad" required>
                                <option value="">Seleccionar...</option>
                                {{#each unidades}}
                                <option value="{{this.id_unidad}}" {{#if (eq this.id_unidad ../producto.id_unidad)}}selected{{/if}}>{{this.nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    {{#unless editing}}
                    <h5 class="mt-4">Inventario Inicial</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Stock Inicial</label>
                            <input type="number" class="form-control" name="stock_inicial" value="0" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Stock Mínimo</label>
                            <input type="number" class="form-control" name="stock_minimo" value="10" required>
                        </div>
                    </div>
                    {{/unless}}

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="form-check form-switch">
                          <input class="form-check-input" type="checkbox" role="switch" name="activo" id="activoCheck" value="1" {{#if producto.activo}}checked{{else}}{{#unless editing}}checked{{/unless}}{{/if}}>
                          <label class="form-check-label" for="activoCheck">Producto Activo</label>
                        </div>
                        <div>
                            <a href="/productos" class="btn btn-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">{{#if editing}}Actualizar Producto{{else}}Guardar Producto{{/if}}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>