<div class="row">
    <!-- Menú Lateral de Pestañas -->
    <div class="col-lg-3">
        <div class="card admin-card mb-4" style="background-color: var(--color-surface); border-color: var(--color-border);">
            <div class="list-group list-group-flush">
                <a href="/bodeguero" class="list-group-item list-group-item-action list-group-item-dark {{#if isRecepcion}}active{{/if}}" style="background-color: transparent; color: var(--color-text-secondary);">
                    <i class="bi bi-box-arrow-in-down me-2"></i>Recepción de Órdenes
                </a>
                <a href="/bodeguero/inventario" class="list-group-item list-group-item-action list-group-item-dark {{#if isInventario}}active{{/if}}" style="background-color: transparent; color: var(--color-text-secondary);">
                    <i class="bi bi-boxes me-2"></i>Inventario General
                </a>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="col-lg-9">
        
        <!-- ======================= PESTAÑA 1: RECEPCIÓN DE ÓRDENES (REDiseñada) ======================= -->
        {{#if isRecepcion}}
            <h1 class="text-white">Órdenes de Compra por Recibir</h1>
            <p class="text-white-50">Estas son las órdenes que los proveedores han marcado como "Enviadas".</p>
            
            {{#if ordenes.length}}
            <div class="accordion" id="accordionOrdenes">
                {{#each ordenes}}
                <div class="accordion-item admin-card mb-3">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{this.id_orden}}">
                            <div class="d-flex justify-content-between w-100 align-items-center pe-2">
                                <span><strong>Orden #{{this.id_orden}}</strong> - {{this.proveedor_nombre}}</span>
                                <!-- CORRECCIÓN: Fecha en color blanco -->
                                <span class="small" style="color: var(--color-text-primary);">Fecha: {{this.fecha_creacion}}</span>
                            </div>
                        </button>
                    </h2>
                    <div id="collapse{{this.id_orden}}" class="accordion-collapse collapse" data-bs-parent="#accordionOrdenes">
                        <div class="accordion-body">
                            <h6 class="card-title">Productos en esta orden:</h6>
                            <ul class="list-group list-group-flush mb-4">
                                {{#each this.detalles}}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <!-- FOTO DEL PRODUCTO AÑADIDA -->
                                        <img src="{{this.imagen}}" alt="{{this.producto_nombre}}" class="me-3 rounded" style="width: 40px; height: 40px; object-fit: contain; background-color: white; padding: 2px;">
                                        <!-- CORRECCIÓN: Nombre del producto en color negro -->
                                        <span style="color: var(--color-text-dark);">{{this.producto_nombre}}</span>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">Cantidad: {{this.cantidad_solicitada}}</span>
                                </li>
                                {{/each}}
                            </ul>
                            <hr>
                            <form action="/bodeguero/recibir-orden" method="POST" onsubmit="return confirm('¿Confirmas la recepción de esta mercancía?');">
                                <input type="hidden" name="id_orden" value="{{this.id_orden}}">
                                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill me-2"></i>Marcar como Recibida</button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="card admin-card text-center p-5">
                <i class="bi bi-box-seam-fill" style="font-size: 4rem; color: var(--color-primary);"></i>
                <h4 class="mt-3 card-title">Todo al Día</h4>
                <p class="card-text">No hay órdenes pendientes de recibir.</p>
            </div>
            {{/if}}
        {{/if}}


        <!-- PESTAÑA 2: INVENTARIO GENERAL -->
        {{#if isInventario}}
            <h1 class="text-white">Inventario General de Almacén</h1>
            <!-- CORRECCIÓN: Añadimos 'text-white-50' para un gris claro legible -->
            <p class="text-white-50">Aquí puedes ver y ajustar el stock de todos los productos.</p>
            <div class="card admin-card" style="background-color: var(--color-surface); border-color: var(--color-border);">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-admin table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Stock Actual</th>
                                    <th class="text-center">Stock Mínimo</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each inventario}}
                                <tr>
                                    <td>{{this.nombre}}</td>
                                    <td class="text-center">
                                        <form action="/bodeguero/update-stock" method="POST" class="d-inline-flex align-items-center">
                                            <input type="hidden" name="id_producto" value="{{this.id_producto}}">
                                            <input type="number" name="stock" class="form-control form-control-sm" value="{{this.stock}}" style="width: 100px;">
                                            <button type="submit" class="btn btn-sm btn-primary ms-2">OK</button>
                                        </form>
                                    </td>
                                    <td class="text-center">{{this.stock_minimo}}</td>
                                    <td>
                                         {{#if (lt stock stock_minimo)}}
                                            <span class="badge bg-danger">Bajo Stock</span>
                                        {{else if (eq stock 0)}}
                                            <span class="badge bg-danger">Agotado</span>
                                        {{else}}
                                            <span class="badge bg-success">En Stock</span>
                                        {{/if}}
                                    </td>
                                </tr>
                                {{else}}
                                <tr><td colspan="4" class="text-center p-4">No hay productos en el inventario.</td></tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
</div>
